<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:drawable="@drawable/seekber_background" />
    <item android:id="@android:id/secondaryProgress">
        <scale android:drawable="@drawable/music_slide_bar" android:scaleWidth="100%" android:scaleGravity="left" />
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="start" android:clipOrientation="horizontal">
            <scale android:drawable="@drawable/music_slide_bar" />
        </clip>
    </item>
</layer-list>